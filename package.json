{
  "name": "rollup-plugin-inline-lit-element",
  "version": "0.0.5",
  "description": "Rollup plugin to inline external styles in lit-element",
  "main": "inline-plugin.js",
  "scripts": {
    "postinstall": "npm run build && npm run link.loader",
    "build": "aria-build -d -i ./src/inline-plugin.ts",
    "link.loader": "aria-fs link ./dist ./node_modules/rollup-plugin-inline-lit-element",
    "link.transpiler": "aria-fs link ./node_modules ./transpiler/node_modules && aria-fs link ./transpiler/dist ./node_modules/lit-element-transpiler && npm run build --prefix transpiler",
    "build.demo": "aria-build -f es --sourcemap -c ./tools/demo.config.ts -i ./demo/counter/counter.ts -o ./dist/demo/counter",
    "rollup": "rollup -c",
    "build.counter": "rollup -c ./demo/counter/rollup.config.js",
    "build.counter.decorators": "rollup -c ./demo/decorators/counter/rollup.config.js",
    "build.hello.world.decorators": "rollup -c ./demo/decorators/hello-world/rollup.config.js",
    "build.all": "yarn build.counter && yarn build.counter.decorators && yarn build.hello.world.decorators",
    "serve": "ts-node --project tools/tsconfig.json tools/server.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aelbore/rollup-plugin-inline-lit-element.git"
  },
  "keywords": [
    "rollup-plugin",
    "lit-element",
    "web-components",
    "custom-elements",
    "rollup",
    "plugin"
  ],
  "author": "Arjay Elbore",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aelbore/rollup-plugin-inline-lit-element/issues"
  },
  "homepage": "https://github.com/aelbore/rollup-plugin-inline-lit-element#readme",
  "peerDependencies": {
    "node-sass": "^4.12.0"
  },
  "dependencies": {
    "lit-element-transpiler": "^0.0.5",
    "magic-string": "^0.25.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jasmine": "^3.5.0",
    "@types/node": "^13.1.4",
    "aria-build": "0.0.22",
    "express": "^4.17.1",
    "lit-element": "^2.2.1",
    "node-sass": "^4.13.0"
  },
  "typings": "inline-plugin.d.ts"
}
